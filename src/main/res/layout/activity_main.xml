<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instruction:"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        />


    <TextView
        android:layout_width="399dp"
        android:layout_height="138dp"
        android:text="This is simple mathematic games which is believe can train your mind. Two numbers are given randomly based on your mind. Two numbers are given randomly based on your level choice with a mathematic operator. You just calculate the answer,
write your answer and press check button. Every correct answer will give you 1 point and any wrong answer will deduct 1 point."
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Level"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        />


    <RadioGroup
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="81dp"
        android:layout_height="47dp"
        android:text="Easy"
        android:layout_margin="26dp"
        android:layout_marginLeft="20dp"
        />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="90dp"
        android:layout_height="47dp"
        android:text="Medium"
        android:layout_margin="26dp"
        android:layout_marginLeft="45dp"
         />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="81dp"
        android:layout_height="47dp"
        android:text="Hard"
        android:layout_margin="26dp"
        android:layout_marginLeft="45dp"
         />
    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text=" 1 "
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text=" + "
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text=" 2 "
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Your Answer"
        android:inputType="text"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button"
        android:layout_width="396dp"
        android:layout_height="50dp"
        android:text="Check"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:layout_marginBottom="250dp"/>
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:text="POINT : 0"
        android:textColor="#EAAA00"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_marginTop="180dp"/>


</LinearLayout>